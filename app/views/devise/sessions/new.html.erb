<div class="navbar-homepage mt-2"><h1>Timmy !</h1></div>
<div class="container-devise mt-5">
  <h2 class="text-white">Connexion</h2>
  <br>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs text-white">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions mb-2">
      <%= f.button :submit, "Connexion", class: "btn-devise text-white" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
