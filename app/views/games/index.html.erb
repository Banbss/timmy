<div id="list-of-games" class="head-game">
  <%= link_to children_path() do %>
    <i class="fa-solid fa-arrow-left fa-xl back-arrow"></i>
  <% end %>
  <p><%= "À quel jeu veux-tu jouer #{@child.first_name}?" %></p>
  <i class="fa-solid fa-arrow-left fa-xl"></i>
</div>

<div class="grid-game">
  <% @games.each_with_index do |game, index| %>
    <% if index.even?%>
      <% color_card = "orange-card-game" %>
    <% else %>
      <% color_card = "green-card-game" %>
    <% end %>
    <%= link_to child_game_child_games_path(@child, game_id: game.id),
      class:"#{color_card}", data:{turbo_method: "post"} do %>
      <div class="photo-game" style="background-image: url(<%= cl_image_path(game.photo.key) %>)">
        <div class="legend">
          <%= "#{game.description}" %>
          <% if game.category == 'Mémoire'%>
            <i class="fa-solid fa-brain fa-lg"></i>
          <% elsif game.category == 'Calcul'%>
            <i class="fa-solid fa-calculator fa-lg"></i>
          <% elsif game.category == 'Logique'%>
            <i class="fa-solid fa-gears fa-lg"></i>
          <% elsif game.category == 'Éveil'%>
            <i class="fa-solid fa-lightbulb fa-lg"></i>
          <% elsif game.category == 'Rapidité'%>
            <i class="fa-solid fa-gauge-high fa-lg"></i>
          <% elsif game.category == 'Écriture'%>
            <i class="fa-solid fa-pen-nib fa-lg"></i>
          <% end %>
        </div>
      </div>
      <div class="bottom-card">
        <p><%= game.name %></p>
        <% if index.even?%>
          <p class="play-btn-orange">jouer</p>
        <% else %>
          <p class="play-btn-green">jouer</p>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
