
<div class="container">
<br>
  <%= cl_image_tag @child.avatar.key, height: 220, width: 220, crop: :fill %>

    <h1><%= @child.first_name %></h1>
      <% @date_dujour = Date.today  %>
      <% @date_enfant = @child.birth_date  %>
