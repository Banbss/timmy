
<div class="container">
    <h1>Ajouter un profil </h1>
    <%= simple_form_for @child do |f| %>
      <%= f.input :first_name %>
      <%= f.input :birth_date, as: :date, html5: true %>
      <%= f.input :photo, as: :file %>
      <%= f.input :alarm %>
      <%= f.submit "Valider", class: "btn btn-warning" %>
    <% end %>
  </div>

<%= link_to "retour", children_path %>
